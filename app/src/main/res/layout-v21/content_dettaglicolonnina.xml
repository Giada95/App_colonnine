<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:maxHeight="1000dp"
    android:visibility="visible"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.giada.app_colonnine.dettaglicolonnina"
    tools:showIn="@layout/activity_dettaglicolonnina">

    <RelativeLayout
        android:layout_width="1000dp"
        android:layout_height="1000dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView8"
            app:srcCompat="@drawable/ricarica"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/textView10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/supporto1" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText2"
            android:layout_marginTop="24dp"
            android:layout_toEndOf="@+id/imageView7"
            android:layout_toRightOf="@+id/imageView7"
            android:text="@string/supportodisp"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            tools:text="Tipo di supporto disponibile" />

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignLeft="@+id/textView10"
            android:layout_alignStart="@+id/textView10"
            android:layout_centerVertical="true"
            android:layout_marginLeft="39dp"
            android:layout_marginStart="39dp"
            android:backgroundTint="@android:color/background_light"
            android:clickable="false" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/imageView7"
            android:layout_toRightOf="@+id/imageView7"
            android:text="@string/indirizzocolon"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@android:color/holo_green_dark"
            android:textColorLink="@android:color/background_dark"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="25dp"
            tools:text="Indirizzo Colonnina:" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_alignBottom="@+id/textView10"
            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp"
            android:layout_toEndOf="@+id/textView10"
            android:layout_toRightOf="@+id/textView10"
            android:ems="10"
            android:inputType="text"
            android:text="Supporti" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_alignLeft="@+id/mapView2"
            android:layout_alignStart="@+id/mapView2"
            android:layout_below="@+id/textView8"
            android:layout_marginLeft="49dp"
            android:layout_marginStart="49dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="text"
            android:text="Indirizzogenerico" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/textView8"
            android:background="@color/colorAccent"
            android:contentDescription="TODO"
            app:srcCompat="@android:drawable/ic_menu_mapmode" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
